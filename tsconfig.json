{
   "compilerOptions": {
      "lib": ["es6"],
      "target": "es2018",
      "module": "commonjs",
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "resolveJsonModule": true,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ],
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
         "@controllers/*": ["./src/controllers/*"],
         "@models/*": ["./src/models/*"],
         "@routes/*": ["./src/routes/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
       "**/*.spec.ts"
    ]
}